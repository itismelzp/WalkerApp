<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.demo.fragment.NestedScrollableHost
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/gallery_view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </com.demo.fragment.NestedScrollableHost>

    <LinearLayout
        android:layout_width="138dp"
        android:layout_height="32dp"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="96dp"
        android:background="@drawable/oppo_alum_unin_bg_shape"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center">

        <ImageView
            android:id="@+id/slide_show_play_iv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/slide_show_clock" />

        <TextView
            android:layout_width="82dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:gravity="center"
            android:text="00:00/03:19"
            android:textColor="#FFFFFFFF" />
    </LinearLayout>

    <com.demo.fragment.NestedScrollableHost
        android:id="@+id/indicator_nsh"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="bottom"
        android:layout_marginBottom="40dp">

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/indicator_view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </com.demo.fragment.NestedScrollableHost>

</FrameLayout>
