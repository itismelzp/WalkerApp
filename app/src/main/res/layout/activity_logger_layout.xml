<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".logger.LoggerActivity">

        <Button
            android:id="@+id/btn_ping"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ping" />

        <TextView
            android:id="@+id/tv_log_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/btn_device_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textIsSelectable="true"
            tools:text="deviceId: xxxx" />

        <Button
            android:id="@+id/btn_media_meta_upload"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="upload file media data" />

        <Button
            android:id="@+id/btn_face_meta_upload"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="upload file face data" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/search_et"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="123" />

            <Button
                android:id="@+id/btn_search_result_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="search" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/coroutine_search_et"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="123" />

            <Button
                android:id="@+id/btn_coroutine_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="协程search" />

        </LinearLayout>

        <Button
            android:id="@+id/btn_test_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="test data" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_upload_images"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="test image upload" />

            <TextView
                android:id="@+id/tv_upload_images"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:text="@string/uploadCnt"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_upload_meta"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:text="@string/uploadMetaCnt"
                android:textSize="13sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_media_meta_upload"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/result_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</ScrollView>
