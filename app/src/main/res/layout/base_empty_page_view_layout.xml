<?xml version="1.0" encoding="utf-8"?>
<com.demo.album.GravityFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/gravity_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000"
    app:verticalGravityPercent="0.45">

    <LinearLayout
        android:id="@+id/linear_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="280dp"
            android:layout_height="200dp"
            android:forceDarkAllowed="false"
            app:anim_autoPlay="true" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="No photos"
            android:textAlignment="center"
            android:fontFamily="sans-serif"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/tv_subtitle"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:gravity="center_horizontal"
            android:text=""
            android:textAlignment="center"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="6dp"
            android:gravity="center"
            android:minWidth="48dp"
            android:textAlignment="center"
            android:visibility="gone" />
    </LinearLayout>
</com.demo.album.GravityFrameLayout>