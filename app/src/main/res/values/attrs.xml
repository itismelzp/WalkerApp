<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="titleText" format="string" />
    <attr name="titleTextColor" format="color" />
    <attr name="titleTextSize" format="dimension" />
    <attr name="image" format="reference" />
    <attr name="imageScaleType">
        <enum name="fillXY" value="0" />
        <enum name="center" value="1" />
    </attr>

    <declare-styleable name="CustomTitleView">
        <attr name="titleText" />
        <attr name="titleTextColor" />
        <attr name="titleTextSize" />
    </declare-styleable>

    <declare-styleable name="CustomImageView">
        <attr name="titleText" />
        <attr name="titleTextColor" />
        <attr name="titleTextSize" />
        <attr name="image" />
        <attr name="imageScaleType" />
    </declare-styleable>

    <!--for feed tail-->
    <attr name="leftIcon" format="reference" />
    <attr name="leftIconSize" format="dimension" />
    <attr name="rightText" format="string" />
    <attr name="rightIcon" format="reference" />
    <attr name="rightIconSize" format="dimension" />
    <attr name="background" format="reference" />
    <attr name="needGrayBg" format="boolean" />
    <attr name="showShadow" format="boolean" />
    <attr name="bgAlpha" format="integer" />
    <declare-styleable name="CustomFeedTailView">
        <attr name="titleText" />
        <attr name="titleTextColor" />
        <attr name="titleTextSize" />
        <attr name="leftIcon" />
        <attr name="leftIconSize" />
        <attr name="rightText" />
        <attr name="rightIcon" />
        <attr name="rightIconSize" />
        <attr name="background" />
        <attr name="needGrayBg" />
        <attr name="showShadow" />
        <attr name="bgAlpha" />
    </declare-styleable>

    <!--for circle animation view-->
    <attr name="firstColor" format="color" />
    <attr name="secondColor" format="color" />
    <attr name="circleWidth" format="dimension" />
    <attr name="speed" format="integer" />
    <declare-styleable name="CustomProgressBar">
        <attr name="firstColor" />
        <attr name="secondColor" />
        <attr name="circleWidth" />
        <attr name="speed" />
    </declare-styleable>


    <attr name="dotCount" format="integer" />
    <attr name="splitSize" format="integer" />
    <attr name="bg" format="reference" />
    <declare-styleable name="CustomVolumeControlBar">
        <attr name="firstColor" />
        <attr name="secondColor" />
        <attr name="circleWidth" />
        <attr name="dotCount" />
        <attr name="splitSize" />
        <attr name="bg" />
    </declare-styleable>

    <declare-styleable name="ShadowTextView">
        <attr name="shadowTextColor" format="color" />
        <attr name="shadowBgStartColor" format="color" />
        <attr name="shadowBgEndColor" format="color" />
        <attr name="shadowSelectEndColor" format="color" />
        <attr name="shadowStartColor" format="color" />
        <attr name="shadowSelectStartColor" format="color" />
        <attr name="shadowEndColor" format="color" />
        <attr name="shadowTextRadius" format="dimension" />
        <attr name="shadowTextCornerRadius" format="dimension" />
        <attr name="shadowTextSize" format="dimension" />
        <attr name="shadowText" format="string" />
    </declare-styleable>

</resources>
